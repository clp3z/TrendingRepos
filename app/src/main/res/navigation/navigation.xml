<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.clp3z.xapotestapp.sections.home.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_repositoryFragment"
            app:destination="@id/repositoryFragment"
            app:popUpTo="@id/homeFragment" />

    </fragment>

    <fragment
        android:id="@+id/repositoryFragment"
        android:name="com.clp3z.xapotestapp.sections.repository.RepositoryFragment"
        android:label="@string/label_repository_info"
        tools:layout="@layout/fragment_repository">

        <argument
            android:name="id"
            app:argType="integer" />

    </fragment>

</navigation>